{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "FETCH_BASE_URL",
        "JWT_SECRET",
        "GEMINI_API_KEY",
        "ORIGIN_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["**/*.{ts,tsx,js,jsx,cjs,mjs}", ".eslintrc.*", "eslint.config.js"],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["**/*.{ts,tsx,js,jsx,cjs,mjs}", "tsconfig.json"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    }
  }
}
